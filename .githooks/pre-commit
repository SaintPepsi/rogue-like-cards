#!/bin/sh
#
# Pre-commit hook: sets the patch version to the number of commits
# ahead of master on the current branch.
#
# Version format: MAJOR.MINOR.PATCH
#   PATCH = number of commits ahead of master (set here)
#   MINOR = bumped by CI on merge to master
#

VERSION_FILE="src/lib/version.ts"
PACKAGE_FILE="package.json"

# Only run if we can compare against master
if ! git rev-parse --verify origin/master >/dev/null 2>&1; then
  if ! git rev-parse --verify master >/dev/null 2>&1; then
    exit 0
  fi
  BASE_REF="master"
else
  BASE_REF="origin/master"
fi

# Get current version
CURRENT_VERSION=$(grep -oP "VERSION = '\K[^']+" "$VERSION_FILE" 2>/dev/null)
if [ -z "$CURRENT_VERSION" ]; then
  exit 0
fi

# Parse major.minor
MAJOR=$(echo "$CURRENT_VERSION" | cut -d. -f1)
MINOR=$(echo "$CURRENT_VERSION" | cut -d. -f2)

# Count commits ahead of master + 1 (for the commit being made now)
COMMIT_COUNT=$(git rev-list --count "$BASE_REF"..HEAD 2>/dev/null || echo "0")
PATCH=$((COMMIT_COUNT + 1))

NEW_VERSION="$MAJOR.$MINOR.$PATCH"

# Skip if version hasn't changed
if [ "$CURRENT_VERSION" = "$NEW_VERSION" ]; then
  exit 0
fi

# Update version.ts
sed -i "s/VERSION = '.*'/VERSION = '$NEW_VERSION'/" "$VERSION_FILE"

# Update package.json
sed -i "s/\"version\": \".*\"/\"version\": \"$NEW_VERSION\"/" "$PACKAGE_FILE"

# Stage the version files so they're included in this commit
git add "$VERSION_FILE" "$PACKAGE_FILE"

echo "Version bumped: $CURRENT_VERSION -> $NEW_VERSION"
